<div class="container">
  <div class="row">
      <table class="table table-hover table-invrese">
        <thead>
          <tr>
            <th>投稿者</th>
            <th>タイトル</th>
            <th>推しメン</th>
            <th>カテゴリー</th>
            <th><i class="fas fa-heart"></th>
            <th><i class="far fa-clock"></i></th>
          </tr>
        </thead>
        <tbody>
          <% @posts.each do |post| %>
              <tr>
                <td>
                  <%=link_to user_personal_path(post.user.id) do %>
                    <%= attachment_image_tag post.user, :profile_image, size: "50x50",format: 'jpeg', fallback: "default.jpg" %><br>
                    <%= post.user.name %>
                  <% end %>
                </td>
                <td>
                  <%=link_to post.title, post_path(post.id) %>
                </td>
                <td>
                  <%= post.member.member %>
                </td>
                <td>
                  <%= post.category.genre %>
                </td>
                <td>
                  <%= post.nices.count %>
                </td>
                <td>
                  <%= post.created_at.strftime("%Y-%m-%d %H:%M:%S") %>
                </td>
              </tr>
          <% end %>
        </tbody>
      </table>
    </div>
</div>