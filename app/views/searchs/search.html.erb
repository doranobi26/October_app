<div class="container">
    <div class="row">
      <div class="col-xs-1"></div>
      <div class="col-xs-10">
        <% if @user_or_post == "2" %>
          <h3 class="text-center">投稿検索(検索ワード "<%= @search %>")</h3>
            <table class="table table-hover table-invrese">
              <thead>
                <tr>
                  <th>投稿者</th>
                  <th>推しメン</th>
                  <th>タイトル</th>
                  <th>投稿日時</th>
                </tr>
              </thead>
              <tbody>
                <% @posts.each do |post| %>
                  <tr>
                    <td>
                        <%=link_to user_path(post.user.id) do %>
                          <%=attachment_image_tag post.user, :profile_image, size: "50x50", format: 'jpeg', fallback: "default.jpg" %><br>
                          <%= post.user.name %>
                        <% end %>
                    </td>
                    <td>
                      <%= post.member.member %>
                    </td>
                    <td>
                      <%= link_to post_path(post.id) do %>
                        <%= post.title %>
                      <% end %>
                    </td>
                    <td>
                      <%= post.created_at.strftime("%Y-%m-%d %H:%M:%S")  %>
                    </td>
                  </tr>
                <% end %>
              </tbody>
            </table>
        <% else @user_or_post == "1" %>
          <h3 class="text-center">ユーザー検索(検索ワード "<%=@search %>")</h3>
            <table class="table table-hover table-invrese">
              <thead>
                <tr>
                  <th></th>
                  <th>ユーザー名</th>
                  <th>自己紹介</th>
                  <th></th>
                </tr>
              </thead>

              <tbody>
                <% @users.each do |user| %>
                  <tr>
                    <td>
                      <%= attachment_image_tag user, :profile_image, size: "50x50",
                      format: 'jpeg', fallback: "default.jpg" %>
                    </td>
                    <td>
                      <%= user.name %>
                    </td>
                    <td>
                      <%= user.introduction %>
                    </td>
                    <td>
                      <%=link_to "プロフィール画面", user_personal_path(user.id) %>
                    </td>
                  </tr>
                <% end %>
              </tbody>
            </table>
        <% end %>
      </div>
      <div class="col-xs-1"></div>
    </div>
</div>