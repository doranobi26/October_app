<div class="container">
  <div class="row">
    <div class="col-xs-1"></div>
    <div class="col-xs-10">
      <h3>Followers Users</h3>

      <% if @users.present? %>
       <table class="table table-hover table-invrese">
         <thead>
           <tr>
            <th>image</th>
            <th>name</th>
            <th></th>
            <th></th>
            <th></th>
           </tr>
         </thead>
         <tbody>
          <% @users.each do |user| %>
          <tr>
            <td>
              <%=attachment_image_tag user, :profile_image, size: "40x40",
              format: 'jpeg', class: "img-circle", fallback: "default.jpg" %>
            </td>
            <td>
              <%=user.name %>
            </td>

            <td>
              フォロー数:<%= user.followings.count %>
            </td>

            <td>
              フォロワー数:<%= user.followers.count %>
            </td>

            <td>
              <%=link_to "投稿一覧画面へ" ,user_path(user.id) %>
            </td>
          </tr>
          <% end %>
        </tbody>
      </table>
      <% end %>
    </div>
    <div class="col-xs-1"></div>
  </div>
</div>